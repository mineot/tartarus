{
  "name": "@mineot/tartarus",
  "command": "tartarus",
  "version": "1.2.1",
  "description": "CLI to create, organize, document and execute named shell command sets.",
  "main": "index.js",
  "scripts": {
    "build": "node build.js",
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "preview": "node dist/tartarus.js",
    "publish": "npm run prepare && npm publish --access public",
    "test": "jest"
  },
  "bin": {
    "tartarus": "./dist/tartarus.js"
  },
  "keywords": [
    "cli",
    "shell",
    "automation",
    "commands",
    "commander",
    "pouchdb",
    "typescript"
  ],
  "author": "Fabiano Pires <mineot@gmail.com>",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/mineot/tartarus"
  },
  "homepage": "https://github.com/mineot/tartarus#readme",
  "bugs": {
    "url": "https://github.com/mineot/tartarus/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/pouchdb": "^6.4.2",
    "commander": "^14.0.0",
    "esbuild": "^0.25.6",
    "inquirer": "^12.9.0",
    "jest": "^30.0.4",
    "kleur": "^4.1.5",
    "pouchdb": "^9.0.0",
    "pouchdb-adapter-memory": "^9.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
